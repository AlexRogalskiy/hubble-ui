{
  "compilerOptions": {
    "incremental": true,
    "outDir": "build/dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "isolatedModules": false,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/@types/react"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": ["typePatches"]
}
